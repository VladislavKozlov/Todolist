@using Todolist.ViewModels
@model TasksVm
<table class="table">
    <thead>
        <tr>
            <td class="sort" data-column="TaskDescription" data-descending="false">
                Описание задачи
            </td>
            <td class="sort" data-column="EnrollmentDate" data-descending="false">
                Дата
            </td>
            <td class="sort" data-column="Approved" data-descending="false">
                Статус
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model.TasksPage)
            {
                <tr class="@(!item.Approved ? "" : "danger")">
                    <td>
                        @item.TaskDescription
                    </td>
                    <td>
                        @item.EnrollmentDate.ToString(string.Format("dd/MM/yyyy HH:mm"))
                    </td>
                    <td>
                        @(!item.Approved ? "В процессе" : "Решена")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TodolistId }, new { @class = "ajaxLink" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TodolistId }, new { @class = "ajaxLink" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<br />
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item">
            <a class="pagelink" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item"><a class="pagelink" href="#">1</a></li>
        <li class="page-item"><a class="pagelink" href="#">2</a></li>
        <li class="page-item"><a class="pagelink" href="#">3</a></li>
        <li class="page-item">
            <a class="pagelink" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
