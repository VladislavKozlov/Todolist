@using Todolist.ViewModels
@model TasksVm
<table class="table">
    <thead>
        <tr>
            <td class="sort" data-column="Description">
                Описание задачи
            </td>
            <td class="sort" data-column="EnrollmentDate">
                Дата
            </td>
            <td class="sort" data-column="Approved">
                Статус
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model.Tasks)
            {
                <tr class="@(!item.Approved ? "" : "danger")">
                    <td>
                        @item.TaskDescription
                    </td>
                    <td>
                        @item.EnrollmentDate.ToString(string.Format("dd/MM/yyyy HH:mm"))
                    </td>
                    <td>
                        @(!item.Approved ? "В процессе" : "Решена")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TodolistId }, new { @class = "ajaxLink" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TodolistId }, new { @class = "ajaxLink" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="text-info">
    <h4>@ViewBag.Error</h4>
</div>