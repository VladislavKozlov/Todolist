@using Todolist.ViewModels
@model TasksVm
<table class="table">
    <thead>
        <tr class="success">
            <td>
                <a href="@Url.Action("")" class="sortLink" id="Description">Описание задачи</a>
            </td>
            <td>
                <a href="@Url.Action("")" class="sortLink" id="EnrollmentDate">Дата</a>
            </td>
            <td>
                Статус
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model.Tasks)
            {
                <tr class="@(!item.Approved ? "active" : "danger")">
                    <td>
                        @item.TaskDescription
                    </td>
                    <td>
                        @item.EnrollmentDate.ToString(string.Format("dd/MM/yyyy HH:mm"))
                    </td>
                    <td>
                        @(!item.Approved ? "В процессе" : "Решена")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TodolistId }, new { @class = "ajaxLink" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TodolistId }, new { @class = "ajaxLink" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="text-info">
    <h4>@ViewBag.Error</h4>
</div>
<script>
    initSort('@ViewBag.DescDescription', '@ViewBag.DescDate');
</script>
