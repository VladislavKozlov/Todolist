@using Todolist.Models
@model TodolistModel
@{
    Layout = null;
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        OnSuccess = "OnSuccess",
        OnFailure = "OnFailure"
    };
}
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>    
    <div class="modal-body">
        <!-- Form -->
        <div class="form-horizontal">
            <br />
            <p class="text-info">Вы действительно хотите это удалить?</p>
            <hr />
            <div class="form-group">
                <div class="col-md-4">
                    <strong>Создана</strong>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.EnrollmentDate)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.TaskDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.TaskDescription)
                </div>
            </div>
            <br />
            @using (Ajax.BeginForm("Delete", "Todolist", FormMethod.Post, ajaxOptions, new { @class = "form-horizontal", @id = "AjaxForm", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.TodolistId)
                <div class="form-group">
                    <div class="col-md-4">
                        <input type="submit" id="Submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <div id="Results" class="text-success"></div>
                    </div>
                </div>
            }
        </div>
    </div>       
</div>
