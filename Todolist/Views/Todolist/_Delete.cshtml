@using Todolist.ViewModels
@model TaskVm
@{
    Layout = null;
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        OnSuccess = "OnSuccess",
        OnFailure = "OnFailure"
    };
}
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@ViewBag.Title</h4>
    </div>
    <div class="modal-body">
        <div class="form">
            <br />
            <p class="text-info">Вы действительно хотите это удалить?</p>
            <hr />
            <div class="form-group">
                <label for="EnrollmentDate">Создана</label>
            </div>
            <div class="form-group">
                @Html.DisplayFor(model => model.EnrollmentDate)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TaskDescription)
            </div>
            <div class="form-group">
                @Html.DisplayFor(model => model.TaskDescription)
            </div>
            <br />
        </div>
    </div>
    <div class="modal-footer">
        @using (Ajax.BeginForm("Delete", "Todolist", FormMethod.Post, ajaxOptions, new { @class = "form", @id = "AjaxForm", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.TodolistId)
            <div class="form-group">
                <div id="Results" class="text-danger"></div>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <input type="submit" id="Submit" value="Delete" class="btn btn-danger" />
        }
    </div>
</div>
