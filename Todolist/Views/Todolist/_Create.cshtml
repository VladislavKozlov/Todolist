@using Todolist.Models
@model TodolistModel
@{
    Layout = null;
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        OnSuccess = "OnSuccess",
        OnFailure = "OnFailure"
    };
}
<script src="@Url.Content("~/Scripts/custom-validator.js")"></script>
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" id="WindowClose" data-dismiss="modal">&times;</button>
    </div>
    @using (Ajax.BeginForm("Create", "Todolist", FormMethod.Post, ajaxOptions, new { @class = "form-horizontal", @id = "AjaxForm", role = "form" }))
    {
    <div class="modal-body">
        <!-- Form -->
        @Html.AntiForgeryToken()
        @Html.Hidden("Approved", false)
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.TaskDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.TaskDescription, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" id="Submit" value="Save" class="btn btn-success" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <div id="Results" class="text-success"></div>
            </div>
        </div>
    </div>
    }
</div>



